{
    "include": [
        "./src/**/*"
    ],
    "compilerOptions": {
        "strict": true,
        "esModuleInterop": true,
        "lib": [
            "dom",
            "dom.iterable",
            "ESNext"
        ],
        "jsx": "react-jsx",

        /* --- VITE & IMPORT.META SUPPORT --- */
        "module": "ESNext",
        "moduleResolution": "bundler",
        "types": ["vite/client"],

        /* --- CUSTOM PATHS --- */
        "baseUrl": ".",
        "paths": {
            "alt1/chatbox": ["./node_modules/@alt1/chatbox"],
            "alt1/base": ["./node_modules/@alt1/base"]
        }
    }
}